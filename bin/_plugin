#!/bin/bash

if [[ $1 == "" ]]
then
	echo "You must need to enter a argument:"
	echo "Examples:"
	echo "  sudo easyckan plugin install <plugin_name>"
	echo "  sudo easyckan plugin harvest sources"
fi


# Install a plugin
if [[ $1 == "install" ]]
then
	if [ -f /etc/easyckan/installers/plugins/ckan_plugin_$2.sh ]; then
		/etc/easyckan/installers/plugins/ckan_plugin_$2.sh
	else
	    echo "File not found!"
	fi
fi


# Install all plugins
if [[ $1 == "--all" ]]
then
	for file in /etc/easyckan/installers/plugins/*
	do
	  $file
	done
fi


# Harvest
if [[ $1 == "harvest" ]]
then
	/etc/easyckan/helpers/harvest.sh $2
fi


# DataPusher
if [[ $1 == "datapusher" ]]
then
	/etc/easyckan/helpers/datapusher.sh $2
fi


# Scheming
if [[ $1 == "scheming" ]]
then
	nano /usr/lib/ckan/default/src/ckanext-scheming/ckanext/scheming/ckan_dataset.json
fi